<% provide(:title, '推客群') %>
<h1>推客群</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@organization) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
	    <div class="form-group">
		  <%= f.label :name, '名称：', class: "control-label" %>
		  <%= f.text_field :name, readonly: !current_user.admin?, class: "form-control" %>

		  <%= f.label :contract, '合同号：', class: "control-label" %>
		  <%= f.text_field :contract, readonly: !current_user.admin?, class: "form-control" %>

		  <%= f.label :invite_code, '群管理员邀请码：', class: "control-label" %>
		  <%= f.text_field :invite_code, value: invite_codes[0], readonly: true, class: "form-control" %>
	    </div>
      <%= f.submit "新建推客群", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
