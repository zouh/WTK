<% provide(:title, @product.name) %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <%= image_for(@product) %>
    </section>
    <% if current_user.admin? || current_member.master? %> 
      <span><%= link_to "修改商品信息", edit_product_path(@product) %></span>
    <% end %>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
      <div>
        <h3><%= @product.name %></h3>
        <div class="cart_line">
          <% if current_member.member? %>
            <% if @product.retail == @product.price %>
              <span class="price">零售价：<%= number_to_currency(@product.retail, unit: '¥') %></span><br>
            <% else %>
              <span class="price">现  价：<%= number_to_currency(@product.retail, unit: '¥') %></span><br>
              <span class="price">零售价：<%= number_to_currency(@product.retail, unit: '¥') %></span><br>
            <% end %>
          <% else %>
            <span class="price">加盟价：<%= number_to_currency(@product.wholesale, unit: '¥') %></span><br>
          <% end %>
          <% if current_member.angel? || current_member.member? %> 
            <%= button_to '加入购物车', line_items_path(product_id: @product), class: "btn btn-warning btn-xs", remote: true %>
          <% end %>
        </div>
        <p><%= sanitize(@product.description) %></p>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <%= qrcode_for_product @product %>
      </div>
  </div>
</div>
	