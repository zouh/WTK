<% provide(:title, @user.name) %>

<% if current_user.admin? || current_member.master? %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/user_stats' %>
      </section>
      <section>
        <br>
        <div id='cart'>
          <%= render @cart %>
        </div>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= @title %></h3>
      <%= render 'shared/catalog' %>
    </div>
  </div>
<% end %>

	