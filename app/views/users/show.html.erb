<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <% if !@user.admin? && !@user.member.master? %>
      <section>
        <%= render 'shared/user_stats' %>
      </section>
      <section>
        <br>
        <div id='cart'>
          <%= render @cart %>
        </div>
      </section>
    <% end %>
  </aside>
  <% if current_user == @user %>
    <div class="col-md-8">
      <h3><%= @title %></h3>
      <%= render 'shared/catalog' %>
    </div>
  <% end %>
</div>


	