<% provide(:title, '注册') %>
<h1>注册</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
	  <div class="form-group">
		<%= f.label :name, '姓名：', class: "control-label" %>
		<%= f.text_field :name, class: "form-control" %>

		<%= f.label :email, '电子邮件：', class: "control-label" %>
		<%= f.text_field :email, class: "form-control" %>

		<%= f.label :phone, '电话：', class: "control-label" %>
		<%= f.text_field :phone, class: "form-control" %>

		<%= f.label :password, '密码：', class: "control-label" %>
		<%= f.password_field :password, class: "form-control" %>

		<%= f.label :password_confirmation, "再次输入密码：", class: "control-label" %>
		<%= f.password_field :password_confirmation, class: "form-control" %>

	    <%= f.label :invite_code, '邀请码：', class: "control-label" %>
	    <%= text_field_tag :invite_code, params[:invite_code], class: "form-control" %>     
	   </div>     
      <%= f.submit "新建帐户", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
