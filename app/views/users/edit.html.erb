<% provide(:title, "编辑用户") %>
<h1>更新帐户信息</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-0">
		<%= gravatar_for @user %>
	    <a href="http://gravatar.com/emails"><br>修改</a>
	</div>
	<div class="col-md-6 col-md-offset-3">
		<%= qrcode_for @user %>
	</div>
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
		  <div class="form-group">
			<%= f.label :name, '姓名：', class: "control-label" %>
			<%= f.text_field :name, class: "form-control" %>

			<%= f.label :email, '电子邮件：', class: "control-label" %>
			<%= f.text_field :email, class: "form-control" %>

			<%= f.label :phone, '电话：', class: "control-label" %>
			<%= f.text_field :phone, class: "form-control" %>

			<%= f.label :password, '密码：', class: "control-label" %>
			<%= f.password_field :password, class: "form-control" %>

			<%= f.label :password_confirmation, "再次输入密码：", class: "control-label" %>
			<%= f.password_field :password_confirmation, class: "form-control" %>

		    <%= f.label :invite_code, '邀请码：', class: "control-label" %>
		    <%= text_field_tag :invite_code,  invite_code_for(@user), readonly: true, class: "form-control" %>     
		   </div>     
		  <%= f.submit "保存修改", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
